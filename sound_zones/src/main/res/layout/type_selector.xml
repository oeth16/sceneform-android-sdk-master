<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/select_sound_zone_type"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_marginBottom="15dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SelectPrivateButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/private_zone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SelectMixedButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/mixed_zone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/SelectSocialButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="@string/social_zone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />
        </LinearLayout>

</androidx.core.widget.NestedScrollView>